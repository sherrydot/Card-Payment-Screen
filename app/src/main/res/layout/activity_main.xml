<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextDate4"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="03xx-xxxxxxx"
        android:inputType="date"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="443dp" />

    <EditText
        android:id="@+id/editTextDate2"
        android:layout_width="86dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="123"
        android:inputType="date"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="249dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Make sure SMS is enabled for this mobile number"
        android:textColor="#a8a8a8"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="496dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postal Code"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="331dp" />

    <EditText
        android:id="@+id/editTextDate3"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="12345"
        android:inputType="date"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="350dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:capitalize="none"
        android:clickable="true"
        android:text="Add Card"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="visible"
        app:backgroundTint="#000000"
        app:iconTint="#C51A1A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94"
        app:strokeColor="#A33434"
        app:strokeColor="#A33434" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="06/12"
        android:inputType="date"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="249dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Number"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="135dp" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="1234 1234 1234 1234"
        android:inputType="number"
        android:minHeight="48dp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="154dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry Date"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="230dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVV"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="230dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="424dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="404dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="-43dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:srcCompat="@drawable/cards"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>